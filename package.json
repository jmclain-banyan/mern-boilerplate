{
    "name": "mern-boilerplate",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "start:dev": "conc \"yarn dev:build-client\" \"yarn dev:build-server\"",
        "start:webpack-serve": "webpack serve --config webpack.config.server.js --mode development",
        "build:app": "yarn build:client && yarn build:server",
        "dev:build-client": "webpack --config webpack.config.client.js --watch --mode development",
        "dev:build-server": "webpack --config webpack.config.server.js --watch --mode development",
        "dev:start-client": "webpack serve --config webpack.config.client.js --port 3000",
        "dev:start-server": "nodemon --delay 2000 dist/server.js",
        "build:client": "webpack --config webpack.config.client.js --mode production",
        "build:server": "webpack --config webpack.config.server.js --mode production",
        "lint": "eslint server client --ext .js,.jsx,.ts,.tsx",
        "prepare": "husky install"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "yarn lint",
            "yarn prettier --write",
            "eslint client/src/*.ts server/src/*.ts --fix-dry-run"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    },
    "dependencies": {
        "express": "^4.18.2",
        "process": "^0.11.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/connect-livereload": "^0.6.0",
        "@types/dotenv-webpack": "^7.0.3",
        "@types/express": "^4.17.15",
        "@types/livereload": "^0.9.2",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "concurrently": "^7.6.0",
        "connect-livereload": "^0.6.1",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.3",
        "dotenv": "^16.0.3",
        "dotenv-webpack": "^8.0.1",
        "eslint": "^8.31.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.0",
        "livereload": "^0.9.3",
        "mini-css-extract-plugin": "^2.7.2",
        "nodemon": "^2.0.20",
        "nodemon-webpack-plugin": "^4.8.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.1",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.1",
        "webpack-node-externals": "^3.0.0"
    }
}
