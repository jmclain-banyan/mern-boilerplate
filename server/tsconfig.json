{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "composite": true,
    "types": ["node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "../",
    "paths": {
      "@global/*": ["global/*"],
      "@services/*": ["server/services/*"],
      "@models/*": ["server/src/models/*"],
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "../global/**/*.ts"]
}
